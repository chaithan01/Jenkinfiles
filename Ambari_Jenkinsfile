docker.image('possd_ubuntu16:v1').inside("-v /var/lib/jenkins/.m2/repository:/home/jenkins/m2repository") {
    stage('Preparation') { // for display purposes
        // Get some code from a GitHub repository
        git branch: 'trunk', url: 'https://github.com/apache/ambari.git'
    }
    stage('Compile') {
        // Run the maven build
        if (isUnix()) {
            sh "/opt/maven/bin/mvn clean install -DskipTests -Dcheckstyle.skip -Drat.skip"
        } else {
            //bat(/"${mvnHome}\bin\mvn" -Dmaven.test.failure.ignore clean package/)
        }
    }
    stage('Test') {
        // Run the maven build
        if (isUnix()) {
            sh "/opt/maven/bin/mvn install -fn -Dcheckstyle.skip"
        } else {
            //bat(/"${mvnHome}\bin\mvn" -Dmaven.test.failure.ignore clean package/)
        }
    }
    stage('Results') {
        junit '**/target/surefire-reports/TEST-*.xml'
        archive 'target/*.jar'
    }
}
